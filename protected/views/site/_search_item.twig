<div class="ad-item">
    <div class="price-container">
        {% if not data.isEavAttributeEmpty('price') %}
        {{ data.getEavAttribute('price')~' '~data.getAttributeUnit('price')~'.' }}
        {% endif %}
    </div>

    <div class="image-container">
    <a class="ad-preview" href="{{App.request.baseUrl~'/ad/view/'~data.id}}">
        <img class="thumb-small" src="{{App.request.baseUrl~'/images/thumb/'~
        'small_'~data.photos[0].id~'_'~data.photos[0].name}}" alt="photo">
    </a>
    </div>

    <div class="ad-description">
        <div class="ad-title">
            <a href="{{App.request.baseUrl~'/ad/view/'~data.id}}">
                {{data.title}}
            </a>
        </div>
        <div class="ad-city">
            {{ data.city.name }}
        </div>
        <div class="ad-added">
            {{ data.added }}
        </div>
    </div>
    
    <div class="clear"></div>
</div>
